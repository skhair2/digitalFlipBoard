{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Monorepo */
    "baseUrl": ".",
    "paths": {
      "@flipboard/shared": ["packages/shared/src/index.ts"],
      "@flipboard/shared/*": ["packages/shared/src/*"],
      "@flipboard/ui": ["packages/ui/src/index.ts"],
      "@flipboard/ui/*": ["packages/ui/src/*"]
    }
  },
  "include": ["src", "server/src", "packages/*/src"],
  "exclude": ["node_modules", "dist"]
}
